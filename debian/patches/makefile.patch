Description: Patch is applied because autotools are not used by upstream.
 Patch setting prefix=/usr and fix install commands.
Author: Jaromír Mikeš <mira.mikes@seznam.cz>
Forwarded: no
---
 libs/Makefile |    9 ++++-----
 1 file changed, 4 insertions(+), 5 deletions(-)

--- zita-convolver.orig/libs/Makefile
+++ zita-convolver/libs/Makefile
@@ -20,9 +20,9 @@
 
 # Modify as required.
 #
-PREFIX = /usr/local
+PREFIX ?= /usr/local
 SUFFIX := $(shell uname -m | sed -e 's/^unknown/$//' -e 's/^i.86/$//' -e 's/^x86_64/$/64/')
-LIBDIR = lib$(SUFFIX)
+LIBDIR ?= lib$(SUFFIX)
 
 
 MAJVERS = 3
@@ -32,8 +32,7 @@ VERSION = $(MAJVERS).$(MINVERS)
 
 CPPFLAGS += -I. -D_REENTRANT -D_POSIX_PTHREAD_SEMANTICS -DENABLE_VECTOR_MODE 
 CXXFLAGS += -fPIC -Wall
-CXXFLAGS += -ffast-math -funroll-loops -O3
-CXXFLAGS += -march=native
+CXXFLAGS += -ffast-math -funroll-loops
 LDLFAGS += 
 LDLIBS +=
 
@@ -55,8 +54,8 @@ install:	$(ZITA-CONVOLVER_MIN)
 	install -d $(DESTDIR)$(PREFIX)/$(LIBDIR)
 	install -m 644 $(ZITA-CONVOLVER_H) $(DESTDIR)$(PREFIX)/include
 	install -m 755 $(ZITA-CONVOLVER_MIN) $(DESTDIR)$(PREFIX)/$(LIBDIR)
+	/sbin/ldconfig -n $(DESTDIR)$(PREFIX)/$(LIBDIR)
 	ln -sf $(ZITA-CONVOLVER_MIN) $(DESTDIR)$(PREFIX)/$(LIBDIR)/$(ZITA-CONVOLVER_SO)
-	ldconfig
 
 clean:
 	/bin/rm -f *~ *.o *.a *.d *.so.*
